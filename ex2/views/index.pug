extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
          h1 Repairs List

        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Data
                    th Nome 
                    th Matrícula
                    th Marca
                    th Número de Intervenções 

                each r in rlist
                    tr 
                        td
                            a(href='/' + r.id)= r.id 
                        td= r.data 
                        td= r.nome 
                        td= r.viatura.matricula
                        td
                            a(href='/' + r.viatura.marca)= r.viatura.marca
                        td= r.nr_intervencoes

        footer.w3-container.w3-teal 
            h5 Generated by Inês Vicente, for RPCW2023-Recurso in #{d}