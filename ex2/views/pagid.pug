extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Informação da Pessoa: #{r.id}
        
    .w3-container
        ul.w3-ul.w3-card-4
            li #[b Nome:] #{r.nome}
            li #[b NIF:] #{r.nif}
            li #[b Data:] #{r.data}
            li #[b Marca da Viatura:] #{r.viatura.marca}
            li #[b Modelo da Viatura:] #{r.viatura.modelo}
            li #[b Matrícula da Viatura:] #{r.viatura.matricula}
            li #[b Número de Intervenções:] #{r.nr_intervencoes}

        .w3-container
            table.w3-table-all
                tr
                    th Código
                    th Nome
                    th Descrição

                each i in r.intervencoes
                    tr
                        td= i.codigo
                        td= i.nome 
                        td= i.descricao
    
    footer.w3-container.w3-teal 
      h5 Generated by Inês Vicente, for RPCW2023-Recurso in #{d} - #[a(href="/") Return]