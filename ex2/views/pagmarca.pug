extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Informação da Marca: #{m}
        
    .w3-container
        ul.w3-ul.w3-card-4
            each r in rlist
                li #{r.viatura.modelo}

        .w3-card-4
            header.w3-container.w3-teal
              h1 Repairs List

            .w3-container
                table.w3-table-all
                    tr
                        th Id
                        th Data
                        th Nome 
                        th Matrícula
                        th Número de Intervenções 

                    each r in rlist
                        tr 
                            td= r.id 
                            td= r.data 
                            td= r.nome 
                            td= r.viatura.matricula
                            td= r.nr_intervencoes
    
    footer.w3-container.w3-teal 
      h5 Generated by Inês Vicente, for RPCW2023-Recurso in #{d} - #[a(href="/") Return]